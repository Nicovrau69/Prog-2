#include<stdio.h>

#define N 3
int main(){
    int mat[N][N];
    int i, j, somadp, somaadp;

    //definindo valor para as posições da matriz
    for(i=0;i<n;i++){
        for(j=0;j<N;j++){
            printf("Digite um valor para colocar na matriz: \n");
            scanf("%d", &mat[i][j]);
        }
    }

    //mostrando os valores e suas posições
    for(i=0;i<N;i++){
        for(j=0;j<N;j++){
            printf("% 5d", mat[i][j]);
        }
        printf("\n");
    }

    //soma dos valores na diagonal principal
    somadp = 0;
    for(i=0;i<N;i++){
        somadp += mat[i][i];
    }
    printf("Soma diagonal principal: %d\n", somadp);

    //soma dos valores que estão acima da diagonal principal
    somaadp = 0;
    for(i=0;i<N;i++){
        for(j=i+1;j<N;j++){
            somaadp += mat[i][j];
        }
    }
    printf("Soma acima diagonal principal: %d\n", somaadp);
}
